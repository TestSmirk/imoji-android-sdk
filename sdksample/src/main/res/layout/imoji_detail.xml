<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="200dp"
                android:layout_height="wrap_content">


    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"/>

    <ImageView
        android:id="@+id/iv_imoji"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_tags_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_imoji"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/tags"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tags_label"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_id_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tags"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/imoji_id"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_imoji_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_id_label"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:textSize="18sp"/>

</RelativeLayout>
